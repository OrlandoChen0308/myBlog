<div id='calendar' ></div>

<h1>Import Events</h2>
<%= form_tag import_events_path, multipart: true do %>
  <%= file_field_tag  :file %>
  <%= submit_tag "Import" %>
<%  end %>

<h2>Listing Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= truncate(event.description, length:100) %></td>
        <td><%= event.start_time.to_formatted_s(:long) %></td>
        <td><%= event.end_time.to_formatted_s(:long) %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

